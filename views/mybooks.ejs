<%-  include ("parts/top.ejs") %>
<br><br><br><br><br>

<div class="container">
    <table class="table table-dark">
        <thead>
          <tr>
            <th scope="col">image</th>
            <th scope="col">title</th>
            <th scope="col">author</th>
            <th scope="col">price</th>
            <th scope="col">action</th>

          </tr>
        </thead>
        <tbody>
            <% for (let book of books) {%>
          <tr >
            <th scope="row"><img style="height: 80px; width: 100px;" src="/uploades/<%= book.image%>" alt=""></th>
            <td><%= book.title%></td>
            <td><%= book.author%></td>
            <td>$<%= book.price%></td>
            <td>
              <a class="btn btn-danger" href="mybooks/delete/<%= book._id%>">delete</a>
                
              <a class="btn btn-primary" href="mybooks/update/<%= book._id%>">update</a>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
</div>

<%- include("parts/bottom.ejs") %>